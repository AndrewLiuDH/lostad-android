<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="16dp"
                android:background="@color/red" />

            <TextView
                android:id="@+id/tv_title"
                android:textColor="@color/txt_blue_deep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:text="商户：深圳游学去吧教育科技有限公司"
                android:textSize="@dimen/sp_header2_or_button" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总金额(元):"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/sp_content2" />
            <TextView
                android:id="@+id/tv_money_order"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="0"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sp_header" />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/bg_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游学卡支付(元):"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/sp_content2" />
            <TextView
                android:id="@+id/tv_money_card"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="0"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/sp_header" />
            <Button
                android:id="@+id/btn_qr"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫码"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/sp_content2" />
        </LinearLayout>
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="16dp"
            android:background="@color/bg_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:background="@color/red" />

            <TextView
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应付款金额:"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/sp_content2" />
            <TextView
                android:id="@+id/tv_money_to_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:focusable="false"
                android:text="0"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_header" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:focusable="false"
                android:text="元"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/sp_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_pay"
                android:gravity="center"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textColor="@color/txt_gray_dark"
                android:textSize="@dimen/sp_header2_or_button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

