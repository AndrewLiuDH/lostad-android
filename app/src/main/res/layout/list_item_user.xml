<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_leader"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@xml/bg_white_gray"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_list_item"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/height_list_item"
            android:layout_height="@dimen/height_list_item">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/head_default" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/paddings">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/txt_blue_deep"
                    android:textSize="@dimen/sp_content2" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="性别"
                    android:textColor="@color/txt_gray_dark"
                    android:textSize="@dimen/sp_content2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身高：未设置"
                    android:textColor="@color/txt_gray_dark"
                    android:textSize="@dimen/sp_content" />
                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="体重：未设置"
                    android:textColor="@color/txt_gray_dark"
                    android:textSize="@dimen/sp_content2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_idCardType"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件号码："
                    android:textColor="@color/txt_gray_dark"
                    android:textSize="@dimen/sp_content" />
                <TextView
                    android:id="@+id/tv_idCard"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="未知"
                    android:textColor="@color/txt_gray_dark"
                    android:textSize="@dimen/sp_content2" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>