<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:padding="@dimen/paddings"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_desc"
        android:layout_margin="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好的名字可以让朋友更容易记住你"
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/sp_content" />
      
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" >
 <TextView
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始："
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/sp_header2_or_button" />
 
        <DatePicker
            android:id="@+id/dpPicker_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />

        <TimePicker
            android:id="@+id/tpPicker_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" >
<TextView
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束："
        android:textColor="@color/txt_gray"
        android:textSize="@dimen/sp_header2_or_button" />

        <DatePicker
            android:id="@+id/dpPicker_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />

        <TimePicker
            android:id="@+id/tpPicker_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

 

</LinearLayout>